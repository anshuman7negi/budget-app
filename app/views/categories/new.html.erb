<section class="section">
  <h2>Add New Category</h2>

  <%= form_with model: @category, url: categories_path, class: "mt-4" do |f| %>
    <div class="form-group">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <%= f.label :icon, class: 'f-label icon' %>
    <ul class="d-flex flex-wrap list-unstyled">
      <% @icons.each do |icon| %>
        <li class="icon-list">
          <label class='icon-label'>
            <%= f.radio_button :icon, "icon/#{icon}", autofocus: true, required: true %>
            <%= image_tag "icon/#{icon}", width: 50 %>
          </label>
        </li>
      <% end %>
    </ul>

    <%= f.submit "Add Category", class: "btn btn-primary" %>
  <% end %>
</section>
