<div class="mt-4">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation' }, role: 'form', novalidate: true) do |f| %>
    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true, placeholder: 'Email', style: 'border: none; border-bottom: 1px solid #ced4da;' %>
    </div>

    <div class="mb-3">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', required: true, placeholder: 'Password', style: 'border: none;' %>
    </div>

    <% if defined?(RSpec) %>
      <%= f.submit 'Test Submit', class: 'btn btn-primary' %>
    <% end %>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
