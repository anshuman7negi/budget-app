<div class="mt-4">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', id: 'signup_form'}, role: 'form', novalidate: true) do |f| %>
    
    <div>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', required: true, placeholder: 'name', style: 'border: none; border-bottom: 1px solid #ced4da;' %>
    </div>

    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true, placeholder: 'Email', style: 'border: none; border-bottom: 1px solid #ced4da;' %>
    </div>

    <div >
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', required: true, placeholder: 'Password', style: 'border: none; border-bottom: 1px solid #ced4da;' %>
    </div>

    <div class="mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control', required: true, placeholder: 'Confirmation Password', style: 'border: none;' %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
